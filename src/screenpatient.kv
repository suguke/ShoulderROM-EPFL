#:kivy 1.10.0

<ScreenPatient>:
    FloatLayout:
        BoxLayout:
            orientation: "vertical"
            size_hint: .5, .5
            pos_hint: {'center_x': .5, 'center_y': .5}

            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Patient Code'
                TextInput:
                    id: patient_code
                    font_size: 30
                    input_filter: 'int' 
                    multiline: False
                    on_text_validate: root.set_patient()
                    on_touch_down: self.delete_selection(self.select_all()) if not self.text.isdigit() else True
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Consultation code'
                TextInput:
                    id: consultation_code
                    disabled: True
                    font_size: 30
                    input_filter: 'int' 
                    multiline: False
                    on_text_validate: root.set_consultation()
                    on_touch_down: self.delete_selection(self.select_all()) if not self.text.isdigit() else True

            Button:
                id: go
                text: 'Commencer'
                on_press: root.validate()
                disabled: True
            
