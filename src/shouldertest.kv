#:kivy 1.10.0

<Protocol>:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Flexion :'

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Left : '

                Label:
                    id: flexion_left
                    text: ''
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Right : '

                Label:
                    id: flexion_right
                    text: ''

    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Abduction :'
        
        BoxLayout:
            orientation: 'vertical'
            
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Left : '

                Label:
                    id: abduction_left
                    text: ''
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Right : '

                Label:
                    id: abduction_right
                    text: ''

    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'External Rotation :'

        BoxLayout:
            orientation: 'vertical'
            
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Left : '

                Label:
                    id: ext_rot_left
                    text: ''
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Right : '

                Label:
                    id: ext_rot_right
                    text: ''


    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Internal Rotation :'

        BoxLayout:
            orientation: 'vertical'
            
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Left : '

                Label:
                    id: int_rot_left
                    text: ''
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Right : '

                Label:
                    id: int_rot_right
                    text: ''
                    
############################

<ShoulderWindow>:
    orientation: 'horizontal'
    BoxLayout:
        orientation: "vertical"

        RelativeLayout:
            size_hint: (1, 10)

            Protocol:
                id: table
                   
        BoxLayout:
            orientation: "horizontal"

            Button:
                id: back
                text: 'Back'
                on_press: root.update_state('back')
                disabled: True
                
            Button:
                id: next
                text: 'Next'
                on_press: root.update_state('next')

    BoxLayout:
        orientation: 'vertical'

        
        Label:
            id: step_label
            text: 'This is a step label.'
  
        BoxLayout:
            orientation: 'horizontal'

            Label:
                id: angle_left
                text: 'Left Arm Angle : '
                size: self.texture_size

            Label:
                id: angle_right
                text: 'Right Arm Angle : '
                size: self.texture_size

        Label:
            id: state_label
            text: 'State label'

        Button:
            id: start_stop
            text: 'Start'
            size_hint: 1, 1
            on_press: root.measure()

        BoxLayout:
            orientation: 'horizontal'
            
            TextInput:
                id: overinput_left
                font_size: 30
                input_filter: 'int' 
                disabled: True
                multiline: False
                on_text_validate: root.overwriteLeft()
            
            TextInput:
                id: overinput_right
                font_size: 30
                input_filter: 'int' 
                disabled: True
                multiline: False
                on_text_validate: root.overwriteRight()
                
        BoxLayout:
            orientation: 'horizontal'

            Button:
                id: redo
                text: 'Redo'
                on_press: root.redo()
                disabled: True

            Button:
                id: validate
                text: 'Validate'
                disabled: True
                on_press: root.validate()