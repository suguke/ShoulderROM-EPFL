#:kivy 1.0.9

<ShoulderWindow>:
    orientation: 'horizontal'
    BoxLayout:
        orientation: "vertical"

        RelativeLayout:
            size_hint: (1, 10)
           
            Label:
                text: 'Here are steps'
                   
        BoxLayout:
            orientation: "horizontal"

            Button:
                text: 'Back'
                
            Button:
                text: 'Next'

    BoxLayout:
        orientation: 'vertical'

        
        RelativeLayout:
            size_hint: (1, 5)
           
            Label:
                text: 'graph'
        
        BoxLayout:
            orientation: 'horizontal'
            
            TextInput:
                id: my_textinput
                font_size: 30
                text: 'Input a value'
            
            Button:
                id: start_stop
                text: 'Start'
                size_hint: 0.5, 1
                on_press: root.measure()

        BoxLayout:
            orientation: 'horizontal'

            Button:
                id: redo
                text: 'Redo'
                on_press: root.redo()
                disabled: True

            Button:
                id: validate
                text: 'Validate'
                disabled: True