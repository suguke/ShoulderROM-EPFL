#:kivy 1.10.0

<ScreenMeasure>:
    
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: "vertical"

            RelativeLayout:
                size_hint: (1, 10)

                Protocol:
                    id: table
                    
            BoxLayout:
                orientation: "horizontal"

                Button:
                    id: back
                    text: 'Retour aux questions'
                    on_press: root.update_state('back')
                    
                Button:
                    id: next
                    text: 'Suivant'
                    on_press: root.update_state('next')

        BoxLayout:
            orientation: 'vertical'

            
            Label:
                id: step_label
                text: 'Flexion'
    
            BoxLayout:
                orientation: 'horizontal'

                Label:
                    id: angle_left
                    text: 'Left Arm Angle : '
                    size: self.texture_size

                Label:
                    id: angle_right
                    text: 'Right Arm Angle : '
                    size: self.texture_size

            Label:
                id: state_label
                text: 'State label'

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    id: import_left
                    text: 'Import Left'
                    size_hint: 1, 1
                    on_press: root.show_load('left')

                Button:
                    id: import_right
                    text: 'Import Right'
                    size_hint: 1, 1
                    on_press: root.show_load('right')

            BoxLayout:
                orientation: 'horizontal'
                
                TextInput:
                    id: overinput_left
                    font_size: 30
                    input_filter: 'int' 
                    disabled: True
                    multiline: False
                    on_text_validate: root.overwriteLeft()
                
                TextInput:
                    id: overinput_right
                    font_size: 30
                    input_filter: 'int' 
                    disabled: True
                    multiline: False
                    on_text_validate: root.overwriteRight()
                    
            Button:
                id: validate
                text: 'Validate'
                disabled: True
                on_press: root.validate()


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)




