#:kivy 1.10.0

# Layout for the Results Screen

<ScreenResult>:
    BoxLayout:
        orientation: 'vertical'

        RelativeLayout:
            size_hint: (1, 10)

            Protocol:
                id: result

        Label:
            id: score
            text: 'Score : ' 
            font_size: 25
        
        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Gauche :' 
                    font_size: 25

                Label:
                    text: 'Diff :'
                    font_size: 25

                Label:
                    text: 'Droite :'
                    font_size: 25

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    id: left
                    text: ''
                    font_size: 25 

                Label:
                    id: diff
                    text: ''
                    font_size: 25  

                Label:
                    id: right
                    text: ''
                    font_size: 25
                    
        BoxLayout:
            orientation: 'horizontal'

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'

                Button:
                    id: back
                    size_hint: None, 1
                    width: self.texture_size[0] * 1.2
                    text: 'Retour aux mesures'
                    font_size: 25
                    on_press: root.manager.current = 'Measurement Screen'

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                size_hint: None, 1

                Button:
                    size_hint: None, 1
                    width: back.width
                    text: 'Sauvegarder'
                    font_size: 25
                    on_press: root.manager.save() # Save data in csv file
