#:kivy 1.10.0

# Layout for the Measure Screen 

<ScreenMeasure>:
    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: "vertical"

            RelativeLayout:
                size_hint: (1, 10)

                Protocol:
                    id: table
                    
            BoxLayout:
                orientation: "horizontal"

                Button:
                    id: back
                    text: 'Retour aux questions'
                    font_size: 25
                    on_press: root.update_state('back')
                    
                Button:
                    id: next
                    text: 'Suivant'
                    font_size: 25
                    on_press: root.update_state('next')

        BoxLayout:
            orientation: 'vertical'

            Label:
                id: step_label
                text: 'Flexion'
                font_size: 25

            Label:
                id: angle_left
                text: 'Angle Bras Gauche : '
                font_size: 25
                size: self.texture_size

            Label:
                id: angle_right
                text: 'Angle Bras Droit : '
                font_size: 25
                size: self.texture_size

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    id: import_left
                    text: 'Import gauche'
                    font_size: 25
                    size_hint: 1, 1
                    on_press: root.show_load('left')

                Button:
                    id: import_right
                    text: 'Import droit'
                    font_size: 25
                    size_hint: 1, 1
                    on_press: root.show_load('right')

            BoxLayout:
                orientation: 'horizontal'
                
                TextInput:
                    id: overinput_left
                    font_size: 27
                    input_filter: 'int' 
                    disabled: True
                    multiline: False
                    on_text_validate: root.overwriteLeft()
                
                TextInput:
                    id: overinput_right
                    font_size: 27
                    input_filter: 'int' 
                    disabled: True
                    multiline: False
                    on_text_validate: root.overwriteRight()
                    
            Button:
                id: validate
                text: 'Valider'
                font_size: 25
                disabled: True
                on_press: root.validate()

# Pop up for data import

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: filechooser
            # Root path for the Pop up. Modify it according to preference.
            path: './'

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: "Annuler"
                on_release: root.cancel()

            Button:
                text: "Charger"
                on_release: root.load(filechooser.path, filechooser.selection)




