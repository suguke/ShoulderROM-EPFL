#:kivy 1.10.0

# Manager for the screens of the application

<Manager>:
    id: screen_manager

    screen_patient: screen_patient
    screen_questions: screen_questions
    screen_measure: screen_measure
    screen_result: screen_result

    ScreenPatient:
        id: screen_patient
        name: 'Patient Screen'
        manager: screen_manager

    ScreenQuestions:
        id: screen_questions
        name: 'Questions Screen'
        manager: screen_manager
        on_pre_leave: root.set_store_questions() # store answers before leaving screen

    ScreenMeasure:
        id: screen_measure
        name: 'Measurement Screen'
        manager: screen_manager
        on_pre_leave: root.set_store_measures() # store angles before leaving screen

    ScreenResult:
        id: screen_result
        name: 'Results Screen'
        manager: screen_manager
        on_enter: root.get_store()  # display angles when entering the screen