#:kivy 1.10.0

# Layout for the Patient Screen

<ScreenPatient>:
    FloatLayout:

        BoxLayout:
            orientation: "vertical"
            size_hint: .5, .5
            pos_hint: {'center_x': .5, 'center_y': .5}

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Code Patient'
                    font_size: 20

                TextInput:
                    id: patient_code
                    font_size: 27
                    input_filter: 'int' 
                    multiline: False
                    on_text_validate: root.set_patient()
                    on_touch_down: self.delete_selection(self.select_all()) if not self.text.isdigit() else True

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Code Consultation'
                    font_size: 20
                    
                TextInput:
                    id: consultation_code
                    disabled: True
                    font_size: 27
                    input_filter: 'int' 
                    multiline: False
                    on_text_validate: root.set_consultation()
                    on_touch_down: self.delete_selection(self.select_all()) if not self.text.isdigit() else True

            Button:
                id: go
                text: 'Commencer'
                font_size: 20
                on_press: root.manager.current = 'Questions Screen'
                disabled: True
            
