#:kivy 1.10.0

# Layout of the protocol custom widget

<Protocol>:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Flexion :'
            font_size: 25

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Gauche : '
                    font_size: 25

                Label:
                    id: flexion_left
                    text: ''
                    font_size: 25
                    
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Droit : '
                    font_size: 25

                Label:
                    id: flexion_right
                    text: ''
                    font_size: 25

    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Abduction :'
            font_size: 25
        
        BoxLayout:
            orientation: 'vertical'
            
            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Gauche : '
                    font_size: 25

                Label:
                    id: abduction_left
                    text: ''
                    font_size: 25

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Droit : '
                    font_size: 25

                Label:
                    id: abduction_right
                    text: ''
                    font_size: 25

    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Rotation Externe :'
            font_size: 25

        BoxLayout:
            orientation: 'vertical'
            
            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Gauche : '
                    font_size: 25

                Label:
                    id: ext_rot_left
                    text: ''
                    font_size: 25

            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Droit : '
                    font_size: 25

                Label:
                    id: ext_rot_right
                    text: ''
                    font_size: 25


    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Rotation Interne :'
            font_size: 25

        BoxLayout:
            orientation: 'vertical'
            
            BoxLayout:
                orientation: 'horizontal'

                Label:
                    text: 'Gauche : '
                    font_size: 25

                Label:
                    id: int_rot_left
                    text: ''
                    font_size: 25

            BoxLayout:
                orientation: 'horizontal'
                
                Label:
                    text: 'Droit : '
                    font_size: 25

                Label:
                    id: int_rot_right
                    text: ''
